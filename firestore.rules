rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    match /homework/{doc} {
      allow create: if request.auth != null; // مؤقت للاختبار
      allow read: if request.auth != null && resource.data.studentUid == request.auth.uid;
      allow update: if request.auth != null && resource.data.studentUid == request.auth.uid;
    }
  }
}
